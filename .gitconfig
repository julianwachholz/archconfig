[core]
  pager = less -FRSX
  editor = nvim
  excludesfile = ~/.gitignore_global

[commit]
  gpgsign = true

[color]
  ui = auto

[alias]
  s = status
  c = commit
  ci = commit
  co = checkout
  cp = cherry-pick
  d = diff
  b = branch
  div = divergence
  pom = push origin master
  fa = fetch --all
  aa = add --all
  ua = reset HEAD
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  r = !git --no-pager l -20
  ra = !git r --all
  head = !git l -1
  h = !git head

[merge]
  log = true
  stat = true

[branch]
  autoseupmerge = always

[branch "master"]
  # currently not in use
  #mergeoptions = --no-commit --no-ff

[format]
  pretty = format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset

[push]
  default = simple

